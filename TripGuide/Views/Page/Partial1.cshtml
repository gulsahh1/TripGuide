
@using TripGuide.Models.Class
@model List<Blog>
<div class="con-bot">
    @foreach (var item in Model)
    {
        <div class="left" style="width:7.3cm">
            <div class="bot-left">
                <img src="@item.BlogImage" style="width:300px; height:150px" alt="" />
            </div>
            <div class="left-text">
                <h4>@item.Title</h4>
                <span class="doller">@item.Date.ToShortDateString()</span>
                <p>@item.Description.Substring(0, 50)</p>
                <p><a href="/Blog/BlogDetail/@item.Id"><span class="read">Read More >></span></a></p>
            </div>
        </div>

    }

</div>
